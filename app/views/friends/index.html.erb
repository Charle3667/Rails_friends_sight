

<table class='table table-striped table-bordered table-hover' id="friends">
  <thead class='table-dark'>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>GitHub</th>
      <th>User ID</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name%></td>
        <td><%= friend.last_name%></td>
        <td><%= friend.email%></td>
        <td><%= friend.phone%></td>
        <td><%= friend.git_hub%></td>
        <td><%= friend.user_id%></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
      </tr>
      <%end%>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

